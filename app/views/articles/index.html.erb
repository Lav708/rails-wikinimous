<center>
<h1> Welcome On the Wikinymous</h1>

<div class ="container body">
  <div class ="row">
    <% @articles.each do |article| %>
      <div class="col-xs-12 col-md-6">
        <li class="title-home list-inline "><%= link_to article.title, article_path(article) %></li>

          <p> <%= article.content %> </p>
        <p class="title-add"> <%= link_to "Modify this article", edit_article_path(article) %>  </p>
        <p class="title-delete "><%= link_to "Delete", article_path(article), method: :delete, data: {confirm:"Are you sure to delete ?"}%></p>
      </div>
    <% end %>





    <div class="col-xs-12 col-md-12">
      <p class="title"> <%= link_to "Add a new article", new_article_path %>  </p>
    </div>

  </div>
</div>

</center>
